[credential]
    helper = store
[core]
    editor = nvim
[user]
    name = Pratham Patel
    email = prathampatel@thefossguy.com
    signingkey = ~/.ssh/git
[commit]
    gpgsign = true
    verbose = true
[color]
    ui = auto
[init]
    defaultBranch = master
[push]
    default = simple
    followTags = true
[diff]
    tool = meld
[gpg]
    format = ssh
    [ssh]
        allowedSignersFile = ~/.ssh/allowed_signers
[blame]
    date = iso8601
    showEmail = true
[log]
    date = iso8601
[advice]
    addIgnoredFile = false
